<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<br/><br/>

<%= form_tag posts_path, method: :get, class: "navbar-form navbar-left search-form" do %>
  <%= text_field_tag(
      :search,
      params[:search],
      placeholder: "Search tag",
      class: "form-control"
  ) %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<br/><br/>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<br/>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content.html_safe %></td>
        <td><%= link_to 'Show', post %></td>
        <!-- <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
